<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitleBtn24" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize_big_24</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle30" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize_big_30</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle24" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize_big_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleDifficulty" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize_big_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitleBtn24</item>
        <item name="android:paddingVertical">@dimen/margin_normal_10</item>
        <item name="android:paddingHorizontal">@dimen/margin_normal_20</item>
        <item name="cornerRadius">@dimen/margin_small_8</item>

        <item name="android:backgroundTint">@color/backgroundNavButton</item>

    </style>

</resources>